<h4>IP Adresy <small>na AP</small></h4>
{$adresy}

<h4>Subnety <small>na AP</small></h4>
{$subnety}

<script>
$(function () {
  $('[data-toggle="tooltip"]').tooltip()
});
</script>
{/ifset}
{/block}

