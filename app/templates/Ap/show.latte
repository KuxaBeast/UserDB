<a href="{link Ap:edit id=>$ap->id}" class="btn btn-default btn-sm" role="button"><i class="glyphicon glyphicon-pencil icon-pencil"></i> Editovat</a>
{/if}
<a href="{link Uzivatel:list id=>$ap->id}" class="btn btn-default btn-sm" role="button"><i class="glyphicon glyphicon-user"></i> Zobrazit u≈æivatele</a>
<br><br>
<pre>
{$ap->poznamka}
</pre>

{if ($ap->proxy_arp == TRUE)}
    <span class="label label-success" data-toggle="tooltip" data-placement="right" title="{$proxy_arp_popis}">ARP proxy zapnuto</span>
{else}
    <span class="label label-default" data-toggle="tooltip" data-placement="right" title="{$proxy_arp_popis}">ARP proxy vypnuto</span>
{/if}
